<% layout('../layout/layout') -%>

<h1>Helpee</h1>

<form action="/auth/registration" method="POST">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">

    <div class="row">
        <div class="col s12">
            <label for="firstname">Firstname* :</label>
            <input type="text" autofocus required id="firstname" name="firstname">
        </div>
    </div>

    <div class="row">
        <div class="col s12">
            <label for="lastname">Lastname* :</label>
            <input type="text" required id="lastname" name="lastname">
        </div>
    </div>

    <div class="row">
        <div class="col s12">
            <label for="email">E-mail* :</label>
            <input type="email" required id="email" name="email">
        </div>
    </div>

    <div class="row">
        <div class="col s6">
            <label for="password">Password* :</label>
            <input type="password" minlength="8" required id="password" name="password">
            (8 character min)
        </div>
        <div class="col s6">
            <label for="password-confirmation">Password confirmation* :</label>
            <input type="password" required id="password-confirmation" name="password-confirmation">
        </div>
    </div>

    <div class="row">
        <div class="col s12">
            <label for="address">Address* :</label>
            <input type="text" id="address" name="address">
        </div>
    </div>

    <div class="row">
        <div class="col s12">
            <label for="address-1">Address :</label>
            <input type="text" id="address-1" name="address-1">
        </div>
    </div>

    <div class="row">
        <div class="col s6">
            <label for="zip-code">Zip code* :</label>
            <input type="text" id="zip-code" minlength="5" name="zip-code">
        </div>

        <div class="col s6">
            <label for="city">City* :</label>
            <input type="text" id="city" name="city">
        </div>
    </div>

    <div class="row">
        <div class="col s12">
            <label for="phone">Phone :</label>
            <input type="tel" maxlength="10" minlength="10" id="phone" name="phone">
        </div>
    </div>

    <button type="submit">Submit</button>
</form>
