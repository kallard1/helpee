<%- include('../../layouts/header'); -%>
<%- include('../../layouts/menuburger'); -%>

<div class="container">
    <form method="POST">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div class="input-field col s12">
            <input type="password" minlength="8" required id="password" name="password">
            <small>(8 character min)</small>
            <label for="password" class="active">Mot de passe :</label>
        </div>

        <div class="input-field col s12">
            <input type="password" required id="password-confirmation" name="passwordConfirmation">
            <label for="password-confirmation" class="active">Confirmation du mot de passe :</label>
        </div>

        <div class="btn-container">
            <button class="btn btn-fit btn-submit active" type="submit">Envoyer</button>
        </div>
    </form>
</div>
<%- include('../../layouts/footer'); -%>
