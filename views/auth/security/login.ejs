<%- include('../../layouts/header'); -%>
<%- stylesheetTag('login.css') -%>
<%- include('../../layouts/menuburger'); -%>

<div class="container">
    <h2 class="title">Se connecter</h2>
    <form action="/auth/login" method="POST">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">

        <div class="input-field col s12">
            <input type="email" autofocus required id="email" name="email">
            <label for="email" class="active">Adresse e-mail</label>
        </div>

        <div class="input-field col s12">
            <input type="password" minlength="8" required id="password" name="password">
            <label for="password" class="active">Mot de passe</label>
        </div>

        <div class="btn-container">
            <button class="btn btn-fit btn-submit active" id="container-button-mobile" type="submit">Se connecter</button>
        </div>
    </form>
</div>
<%- include('../../layouts/js_imports'); -%>
<%- include('../../layouts/footer'); -%>
