<%- include('../layouts/header') -%>
<form action="/community/save" method="POST">
    <div class="row">
        <div class="col s12">
            <label for="name">Name* :</label>
            <input type="text" maxlength="75" autofocus required id="name" name="name">
        </div>
    </div>

    <div class="row">
        <div class="col s4">
            <label for="zip_code">Zip code* :</label>
            <input type="text" maxlength="5" required id="zip_code" name="zip_code">
        </div>

        <div class="col s8">
            <label for="city">City* :</label>
            <input type="text" maxlength="100" required id="city" name="city">
        </div>
    </div>

    <div class="row">
        <div class="col s12">
            <label for="description">Description* :</label>
            <textarea name="description" id="description" cols="30" rows="10"></textarea>
        </div>
    </div>
    <button type="submit">Create new</button>
</form>
<%- include('../layouts/js_imports') -%>
<%- include('../layouts/footer') -%>
